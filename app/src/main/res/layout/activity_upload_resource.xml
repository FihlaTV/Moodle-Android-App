<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cyberthieves.trialapp.UploadResource"
    android:background="@drawable/side_nav_bar">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabBrowse"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        app:backgroundTint="#0047b3"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabUpload"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        app:backgroundTint="#00cc00"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="  No file Chossen"
        android:id="@+id/editText3"
        android:background="@drawable/back"

        android:layout_alignBottom="@+id/fabBrowse"
        android:layout_toEndOf="@+id/fabBrowse"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Upload a public Resource"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textStyle="bold"/>

</RelativeLayout>
